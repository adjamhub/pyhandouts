{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MkDocs: Build",
            "type": "shell",
            "command": "mkdocs",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "MkDocs: Serve",
            "type": "shell",
            "command": "mkdocs",
            "args": ["serve"],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^Serving on (.*)$",
                    "line": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Building documentation",
                    "endsPattern": "^Serving on"
                }
            }
        }
    ]
}